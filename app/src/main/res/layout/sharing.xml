<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"

    android:padding="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutHeader"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutCopy"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:id="@+id/imageViewCopyLink"

                android:src="@drawable/link_icon"
                android:layout_alignParentRight="false"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCopyLink"
                android:layout_toRightOf="@+id/imageViewCopyLink"
                android:text="@string/copylink"
                android:layout_alignParentRight="false"
                android:textColor="#000000"
                android:layout_marginLeft="8dp"
                android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutClose"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:id="@+id/imageViewClose"
                android:layout_toLeftOf="@+id/textViewClose"
                android:src="@drawable/close_icon"
                android:layout_marginRight="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewClose"

                android:text="@string/close"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:layout_marginRight="8dp"
                android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="#33000000"
            android:layout_below="@+id/layoutHeader"
            android:id="@+id/LinearLayout"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/layFacebook">


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageViewFacebook"
                    android:src="@drawable/facebook"
                    android:background="@drawable/blank_square"
                    android:gravity="center"
                    android:padding="10dp"
                   android:scaleType="fitXY" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"

                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/layWhatsapp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageViewWhatsapp"
                    android:src="@drawable/whatsapp"
                    android:background="@drawable/blank_square"
                    android:gravity="center"
                    android:padding="10dp"
                    android:scaleType="fitXY" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"

                android:orientation="vertical"
                android:id="@+id/layInsta">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageViewInsta"
                    android:background="@drawable/blank_square"
                    android:src="@drawable/instagram"
                    android:padding="10dp"
                    android:scaleType="fitXY" />

            </LinearLayout>


        </LinearLayout>
