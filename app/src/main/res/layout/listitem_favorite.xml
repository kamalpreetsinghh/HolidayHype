<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/lay"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:id="@+id/imageViewSrc"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitle"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewSrc"
            android:layout_toLeftOf="@+id/imageViewBack"
            android:textColor="#000000"
            android:textSize="15dip"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewType"
            android:layout_below="@+id/textViewTitle"

            android:textSize="12dip"
            android:textColor="#000000"
            android:textStyle="italic"
            android:layout_alignLeft="@+id/textViewTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDescription"
            android:layout_alignLeft="@+id/textViewTitle"
            android:layout_alignStart="@+id/textViewType"
            android:textSize="10dip"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/imageViewGo"
            android:layout_below="@+id/textViewType" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:id="@+id/imageViewClock"
            android:layout_below="@+id/textViewDescription"

            android:layout_alignStart="@+id/textViewType"
            android:src="@drawable/watch_icon"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewTime"
            android:layout_below="@+id/textViewDescription"
            android:layout_toRightOf="@+id/imageViewClock"
            android:textColor="#000000"
            android:textSize="12dip"
            android:layout_marginLeft="5dp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:id="@+id/imageViewGo"

            android:layout_alignParentRight="true"

            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:layout_marginRight="15dp"
            android:adjustViewBounds="false"
            android:src="@drawable/rightarrow"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="20dp" />
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textViewDescription"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="5dp">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageViewStar1"
            android:background="@drawable/star"
            android:layout_alignParentBottom="false"
            android:visibility="gone" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageViewStar2"
            android:background="@drawable/star"
            android:layout_toRightOf="@+id/imageViewStar1"
            android:visibility="gone" />
        />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageViewStar3"
            android:background="@drawable/star"
            android:layout_toRightOf="@+id/imageViewStar2"
            android:visibility="gone" />
        android:layout_alignParentBottom="false" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageViewStar4"


            android:background="@drawable/star"
            android:layout_toRightOf="@+id/imageViewStar3"
            android:visibility="gone" />
        android:layout_alignParentBottom="false" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageViewStar5"
            android:background="@drawable/star"
            android:layout_toRightOf="@+id/imageViewStar4"
            android:visibility="gone" />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>