<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/lightest_grey_color_semitransparent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_below="@+id/image"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="80dp"
        android:background="@color/lightest_grey_color_semitransparent"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_below="@+id/name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="98dp"
        android:background="@color/lightest_grey_color_semitransparent" />

    <RelativeLayout
        android:id="@+id/firstItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="160dp">

        <View
            android:id="@+id/providerTitle"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="@color/lightest_grey_color_semitransparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/providerTitle"
            android:layout_marginTop="5dp"
            android:background="@color/lightest_grey_color_semitransparent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstItem"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="18dp">

        <View
            android:id="@+id/providerTitle2"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="@color/lightest_grey_color_semitransparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/providerTitle2"
            android:layout_marginTop="5dp"
            android:background="@color/lightest_grey_color_semitransparent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_alignParentRight="true"
        android:layout_marginTop="36dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/mainPrice"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/lightest_grey_color_semitransparent" />

        <TextView
            android:id="@+id/mainFlag"
            android:layout_width="85dp"
            android:layout_height="8dp"
            android:layout_below="@+id/mainPrice"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@color/lightest_grey_color_semitransparent"
            android:textSize="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mainClickOut"
            android:layout_width="86dp"
            android:layout_height="30dp"
            android:layout_below="@+id/mainFlag"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@color/lightest_grey_color_semitransparent"
            android:clickable="false"
            android:gravity="center" />
    </RelativeLayout>
</RelativeLayout>
