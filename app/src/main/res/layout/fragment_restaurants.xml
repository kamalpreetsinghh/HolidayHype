<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <include
        android:id="@+id/include2"
        layout="@layout/toolbar_restaurant" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_below="@+id/include2"
        android:src="@drawable/background"
        android:scaleType="centerCrop" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include2"
        android:id="@+id/laySearch"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"

            android:id="@+id/editTextSearch"
            android:textColorHint="@color/colorGray"
            android:background="@drawable/round_searchbox"

            android:hint="@string/search"
            android:padding="8dp"
            android:textColor="@color/colorGray"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_toLeftOf="@+id/imageViewFilter"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:id="@+id/imageViewFilter"
            android:src="@drawable/filter_foodnearme"

            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:focusableInTouchMode="false"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignWithParentIfMissing="false"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/laySearch">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNoData"
            android:text="@string/nodata"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_alignParentLeft="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:visibility="gone" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewRestaurant"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:dividerHeight="0dp"
            android:divider="@null"
            />

    </RelativeLayout>
</RelativeLayout>