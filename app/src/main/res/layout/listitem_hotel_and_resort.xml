<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/lay"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:id="@+id/imageViewSrc"
            android:scaleType="centerCrop" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageViewSrc"
            android:layout_marginLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitle"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:textSize="15dip"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewType"
            android:layout_below="@+id/textViewTitle"

            android:textSize="12dip"
            android:textColor="@color/colorRed"
            android:textStyle="italic"
            android:layout_alignLeft="@+id/textViewTitle" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:id="@+id/imageViewTransportCar"
            android:layout_below="@+id/textViewType"
            android:layout_alignLeft="@+id/textViewTitle"
            android:layout_alignStart="@+id/textViewType"
            android:src="@drawable/transport_car"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDistance"
            android:layout_below="@+id/textViewType"
            android:layout_toRightOf="@+id/imageViewTransportCar"
            android:textColor="#000000"
            android:paddingLeft="7dp"
            android:textSize="12dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDescription"
           android:layout_below="@+id/imageViewTransportCar"
            android:layout_alignLeft="@+id/textViewTitle"
            android:layout_alignStart="@+id/textViewType"
            android:textSize="10dip"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/imageViewGo"
            android:layout_marginTop="3dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:id="@+id/imageViewGo"

            android:layout_alignParentRight="true"

            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:layout_marginRight="15dp"
            android:adjustViewBounds="false"
            android:src="@drawable/rightarrow"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="20dp" />
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textViewDescription"
        android:layout_marginRight="3dp"
         android:paddingBottom="12dp">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageViewStar1"
            android:background="@drawable/star"
            android:layout_alignParentBottom="false" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageViewStar2"
            android:background="@drawable/star"
            android:layout_toRightOf="@+id/imageViewStar1" />
        />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageViewStar3"
            android:background="@drawable/star"
            android:layout_toRightOf="@+id/imageViewStar2" />
        android:layout_alignParentBottom="false" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageViewStar4"


            android:background="@drawable/star"
            android:layout_toRightOf="@+id/imageViewStar3"
            android:visibility="gone" />
        android:layout_alignParentBottom="false" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/imageViewStar5"
            android:background="@drawable/star"
            android:layout_toRightOf="@+id/imageViewStar4"
            android:visibility="gone" />
    </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>